{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Check Node Version",
			"type": "shell",
			"command": "node -v && which node",
			"options": {
			  "cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "none",
			"detail": "Prints node version and node path"
		  },
		{
			"label": "Start Vite Dev Server",
			"type": "shell",
			"command": "yarn dev",
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"group": "build",
			"problemMatcher": [],
			"detail": "Starts the Vite development server using Yarn"
		},
		{
			"label": "Add Yarn Package",
			"type": "shell",
			"command": "yarn",
			"args": [
			  "add",
			  "${input:packageName}"
			],
			"options": {
			  "cwd": "${workspaceFolder}/client",
			},
			"problemMatcher": [],
			"detail": "Add user-defined yarn package"
		  }
	],
	"inputs": [
		{
			"id": "packageName",
			"type": "promptString",
			"description": "Which package(s) do you want to install?"
		}
	]
}